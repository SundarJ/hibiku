<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>hibiku.editor</title>
    <link rel="stylesheet" href="use/css/base.css">
    <link rel="stylesheet" href="use/css/editor.css">
</head>
<body>
  
    <main>

        <aside class="hb-sidebar">
        
            <header class="hb-header">
                <h1>Editor</h1>
            </header>
            
            <ul class="hb-files">
            ((:each files))
                <li class="hb-file" data-hb-page="((file))">((file))</li>
            ((each.))
            </ul>

        </aside><form class="hb-remnant hb-editor-form" action="io" method="post">
        
            <input type="hidden" id="page-hidden-field" name="page">
            <div class="hb-btn-container">
                <button type="submit" class="hb-field hb-btn">Save</button>
            </div>
            
        </form>

    </main>

    <script src="use/js/lib/require.js" data-main="use/js/editor"></script>
    
</body>
</html>
