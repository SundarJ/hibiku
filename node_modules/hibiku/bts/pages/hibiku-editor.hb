<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>hibiku.editor</title>
    <link rel="stylesheet" href="use/css/base.css">
    <link rel="stylesheet" href="use/css/editor.css">
</head>
<body>
  
    <main>

        <aside class="hb-sidebar">
            <header class="hb-header">
                <h1>Editor</h1>
            </header>

            <ul class="hb-file-list">
            ((:each files))
                <li class="hb-file" data-hb-page="((:this))">((:this))</li>
            ((each.))
            </ul>

        </aside>

        <form class="hb-editor-form" action="io/post" method="post">
            <div class="hb-editor"></div>
            <input type="hidden" id="page-hidden-field" name="page">
            <div class="hb-btn-container">
                <button type="submit" class="hb-btn">Save</button>
            </div>
        </form>

    </main>

    <!--<script src="use/js/nest.js"></script>
    <script src="use/js/editor.js"></script>
    <script src="use/js/fields.js"></script>-->
    
</body>
</html>