{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "schema for hibiku json api: page content post",
    "type": "object",
    "properties": {
        "page": {
            "$ref": "#/definitions/nonEmptyString"
        },
        "fields": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "anchor": {
                        "$ref": "#/definitions/nonEmptyString"
                    },
                    "content": {
                        "$ref": "#/definitions/nonEmptyString"
                    }
                },
                "required": ["anchor", "content"]
            }
        }
    },
    "required": ["page", "fields"],
    "definitions": {
        "nonEmptyString": {
            "type": "string",
            "minLength": 0
        }
    }
}