{
    "name": "hibiku",
    "version": "0.0.0",
    "description": "Node.js templating system",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "Sundar Joshi",
    "license": "zlib",
    "dependencies": {
        "app-root-path": "^1.0.0",
        "bluebird": "^2.9.33",
        "body-parser": "~1.12.4",
        "co-body": "^3.0.0",
        "deep-extend": "^0.4.0",
        "jsck": "~0.2.4",
        "koa": "^0.21.0",
        "koa-route": "^2.4.2",
        "koa-static": "^1.4.9",
        "mongoose": "~4.0.3",
        "nano": "^6.1.4",
        "orientdb": "^1.3.0",
        "pegjs": "~0.8.0",
        "redis": "^0.12.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/SundarJ/hibiku.git"
    },
    "config": {
        "hibiku": {
            "root": ".",
            "engine": {
                "views": [
                    "bts/pages"
                ],
                "extension": {
                    "hibiku": ".hb",
                    "plain": ".html"
                }
            },
            "user": {
                "db": {
                    "host": "localhost",
                    "name": "hibiku",
                    "user": "",
                    "pass": ""
                },
                "options": {
                    "locale": "en",
                    "frontPage": "index"
                },
                "engine": {
                    "views": [
                        "visage"
                    ]
                },
                "editor": {
                    "hidden": [
                        "components"
                    ]
                }
            }
        }
    }
}
